{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Liste mots
{% endblock %}

{% block body %}
	{{parent()}}
	<div class="container">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">Liste des mots
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 bg-white p-4 m-0 text-primary">
				<div class="responsive">
					<table class="table table-hover">
						<thead>
							<tr class="table-info">
								<th scope="row">Libelle :</th>
								<th></th>
								<th></th>
								
								
							</tr>
						</thead>
						<tbody>

							{% for mot in mots %}
								<tr class={{cycle(['table-active', 'table-primary'],loop.index0) }}>
									 <td>{{mot.libelle |capitalize }}</td>
									 
									 </td>
									 <td></td>
									 <td><a href="{{path('liste_mots',{'supp':mot.id})}}"><span  title="Supprimer le tmot" class="material-icons">cancel </span></td>
								</tr>
							{% endfor %}
						</tbody>
					</tr>
				</tbody>
			</table>
		</div>

	</div>
</div></div>{% endblock %}