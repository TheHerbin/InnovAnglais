{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Ajout test
{% endblock %}

{% block body %}
	{{parent()}}
	<div class="container">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">Ajout d'un test
			</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 bg-white p-4 m-0 text-primary">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.niveau, 'Niveau ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
				</div>
                <div class="form-group">
					{{ form_label(form.utilisateurs, 'Utilisateurs ', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.utilisateurs, {'attr': {'class': 'form-control'}}) }}
				</div>
                <div class="form-group">
					{{ form_label(form.resultat, 'Resultat', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.resultat, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group mx-auto text-center">
					{{ form_widget(form.envoyer, { 'label': "Envoyer", 'attr': {'class': 'btn font-weight-bold bg-primary text-white mx-auto text-center'}}) }}
				</div>
			</div>
		</div>
	</div>

	{{form_end(form) }}


{% endblock %}
